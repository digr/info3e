<div class="container has-text-centered">

  <h1 class="title">Пользователи</h1>
 
  <table class="table">
    <tr>
      <th>Логин</th>
      <th>Полное имя</th>
      <th>Учитель?</th>
    </tr>
   
    <% @users.each do |u| %>
      <tr>
        <td><%= u.username %></td>
        <td><%= u.fullname %></td>
        <td>
          <% if u.teacher? %>Да<% end %>
        </td>
      </tr>
    <% end %>
  </table>

  <div class="field is-grouped">
    <p class="control">
      <%= button_to "Добавить", '/users/new', method: :get, class: "button" %>      
    </p>
  </div>

</div>