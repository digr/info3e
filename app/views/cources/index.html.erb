<div class="container has-text-centered">
  <h1 class="title">Предметы</h1>

  <table class="table">
    <tr>
      <th>Название</th>
      <th>Самооценка</th>
      <th></th>
    </tr>

    <% @cources.each do |cource| %>
      <tr>
        <td><%= cource.title %></td>
        <td><%= cource.assessmnt ? 'Да' : '' %></td>
        <td><%= link_to 'Изменить', edit_cource_path(cource) %></td>
      </tr>
    <% end %>
  </table>

  <div class="field is-grouped">
    <p class="control">
      <%= button_to "Добавить", '/cources/new', method: :get, class: "button" %>
    </p>
  </div>
</div>
